<Window x:Class="KinectGait.DialogNewCapture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Capture" Height="158" Width="682" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="623*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name of the person" Height="29" HorizontalAlignment="Left" Margin="18,20,0,0" Name="label1" VerticalAlignment="Top" Width="235" Grid.ColumnSpan="2" />
        <TextBox Height="28" HorizontalAlignment="Left" Margin="85,18,0,0" Name="textBox1" VerticalAlignment="Top" Width="504" DataContext="{Binding}" Grid.Column="1" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="415,75,0,0" Name="botaoSalvar" VerticalAlignment="Top" Width="75" Click="button1_Click" Grid.Column="1" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,75,23,0" Name="botaoCancelar" VerticalAlignment="Top" Width="75" Click="button2_Click" Grid.Column="1" />
    </Grid>
</Window>
